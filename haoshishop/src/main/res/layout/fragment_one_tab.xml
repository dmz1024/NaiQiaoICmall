<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size45"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size1"
            android:drawableTop="@mipmap/zqh_xiaoxi2"
            android:gravity="center"
            android:text="消息"
            android:textColor="#ee9821"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size1"
            android:drawableTop="@mipmap/zqh_qunzu"
            android:gravity="center"
            android:text="群组"
            android:textColor="#666"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size1"
            android:drawableTop="@mipmap/zqh_qinren"
            android:gravity="center"
            android:text="亲人"
            android:textColor="#666"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size1"
            android:drawableTop="@mipmap/zqh_dongtai"
            android:gravity="center"
            android:text="动态"
            android:textColor="#666"
            android:textSize="@dimen/sp10" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/ll_tab"
        android:id="@+id/ll_view_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <FrameLayout
            android:id="@+id/fg_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <View
                android:id="@+id/view_tab"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="@dimen/size2"
                android:background="#ee9821" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/ll_view_tab"
        android:background="#f5f5f5" />
</RelativeLayout>