<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/library_shape_fff_radius_5"
    android:gravity="center">

    <view.Color2Text
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/size5"
        android:minHeight="@dimen/size100"
        android:padding="@dimen/size10"
        android:text="提示\n"
        android:textColor="#333"
        android:textSize="@dimen/sp15"
        app:Color2Text_color="#666"
        app:Color2Text_size="@dimen/sp13" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_below="@id/tv_message"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"

        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_left"
            android:layout_width="0dp"
            android:textSize="@dimen/sp14"
            android:layout_height="@dimen/size35"
            android:layout_weight="1"
            android:textColor="#666"
            android:background="@null"
            android:visibility="gone" />

        <View
            android:id="@+id/view_divider"
            android:visibility="gone"
            android:layout_width="@dimen/size0.5"
            android:layout_height="match_parent"
            android:background="#e1e1e1" />

        <Button
            android:textSize="@dimen/sp14"
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:textColor="#333"
            android:layout_height="@dimen/size35"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>