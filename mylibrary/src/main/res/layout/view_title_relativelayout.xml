<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size42">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size12"
        android:drawablePadding="@dimen/size10"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size12"
        android:drawablePadding="@dimen/size5"
        android:drawableRight="@mipmap/icon_go"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="15"
        android:maxLines="1" />

    <View
        android:id="@+id/view_11"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb"
        android:visibility="invisible" />

    <View
        android:id="@+id/view_22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/size12"
        android:layout_marginRight="@dimen/size12"
        android:layout_marginTop="@dimen/size5"
        android:background="#ebebeb"
        android:visibility="invisible" />
</RelativeLayout>