<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:padding="@dimen/size10">

        <Button
            android:id="@+id/bt_right"
            android:layout_width="@dimen/size85"
            android:layout_height="@dimen/size33"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_f73f5f_radius_3"
            android:text="批量付款"
            android:textColor="#fff"
            android:textSize="@dimen/sp16" />

        <Button
            android:id="@+id/bt_left"
            android:layout_width="@dimen/size85"
            android:layout_height="@dimen/size33"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:layout_toLeftOf="@id/bt_right"
            android:background="@drawable/shape_cecece_radius_3"
            android:text="批量删除"
            android:textColor="#333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_choose"
            style="@style/TextSize15Color333"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/icon_acheck"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_vertical"
            android:text="全选" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fg_content"
        android:layout_above="@id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
