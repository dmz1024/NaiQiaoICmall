<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="@dimen/size60">
    <View
        android:background="#fbfbfb"
        android:layout_marginBottom="@dimen/size46"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size46"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frame_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/size5"
                android:src="@mipmap/icon_common_index_cur" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/size2"
                android:text="首页"
                android:textColor="#f73f5f"
                android:textSize="@dimen/sp10" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size10"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/size5"
                android:src="@mipmap/icon_common_type" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/size2"
                android:text="分类"
                android:textColor="#666"
                android:textSize="@dimen/sp10" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/frame_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/size5"
                android:src="@mipmap/icon_common_send" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/size2"
                android:text="发货"
                android:textColor="#666"
                android:textSize="@dimen/sp10" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_four"
                android:layout_width="@dimen/size25"
                android:layout_height="@dimen/size25"
                android:layout_gravity="top|center"
                android:layout_marginTop="@dimen/size5"
                android:src="@mipmap/icon_common_personal" />

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/size2"
                android:text="我的"
                android:textColor="#666"
                android:textSize="@dimen/sp10" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rv_center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size60"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="@dimen/size42"
            android:layout_height="@dimen/size42"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_common_contact" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size2"
            android:text="极速补货"
            android:textColor="#666"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

</FrameLayout>