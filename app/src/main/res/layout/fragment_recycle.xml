<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:background="@drawable/shape_f73f5f_radius_3"
        android:id="@+id/bt_delete"
        android:layout_marginBottom="@dimen/size20"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:textSize="@dimen/sp15"
        android:text="删除订单"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40" />

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="快递运费："
                style="@style/TextSize12Color666" />
            <TextView
                android:text="￥125.00"
                android:layout_alignParentRight="true"
                style="@style/TextSize12Color666" />
        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/size10"
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/size10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="价格合计："
                style="@style/TextSize12Color666" />
            <TextView
                android:text="￥1250.00"
                android:layout_alignParentRight="true"
                style="@style/TextSize12Color666" />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/size10"
            android:background="#e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:lineSpacingExtra="@dimen/size5"
            android:layout_marginTop="@dimen/size10"
            android:text="订单状态：订单回收站\n回收原因：取消待付款订单\n订单编号：123456789"
            style="@style/TextSize11Color999"/>
    </LinearLayout>
</RelativeLayout>