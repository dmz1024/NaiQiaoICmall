<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <view.Color2Text
        android:id="@+id/tv_tui_kuan"
        style="@style/TextSize15Color333"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        android:drawableLeft="@mipmap/icon_shtype_tui"
        android:drawablePadding="@dimen/size10"
        android:drawableRight="@mipmap/icon_go"
        android:gravity="center_vertical"
       android:padding="@dimen/size10"
        android:text="仅退款\n"
        android:lineSpacingExtra="@dimen/size3"
        app:Color2Text_color="#999"
        app:Color2Text_content="商品已收到有质量问题并与卖家协商申请退款"
        app:Color2Text_size="@dimen/sp11" />

    <view.Color2Text
        android:id="@+id/tv_tui_all"
        style="@style/TextSize15Color333"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size1"
        android:background="#fff"
        android:drawableLeft="@mipmap/icon_shtype_tuiall"
        android:drawablePadding="@dimen/size10"
        android:drawableRight="@mipmap/icon_go"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/size3"
        android:padding="@dimen/size10"
        android:text="退货退款\n"
        app:Color2Text_color="#999"
        app:Color2Text_content="商品已收到，需退还已收到的货物"
        app:Color2Text_size="@dimen/sp11" />
</LinearLayout>