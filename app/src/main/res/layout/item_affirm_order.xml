<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:divider="@drawable/linear_a2a2a2_shpe"
    android:orientation="vertical"
    android:padding="@dimen/size10"
    android:showDividers="middle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size10">

        <view.Color2Text
            android:id="@+id/tv_sn"
            style="@style/TextSize15Color333"
            android:text="订单一：N1284469545      "
            app:Color2Text_color="#666"
            app:Color2Text_content="共3种9件商品"
            app:Color2Text_size="@dimen/sp13" />

        <TextView
            android:id="@+id/tv_show"
            style="@style/TextSize12Color999"
            android:layout_gravity="right"
            android:text="收起"
            android:textColor="#f73f5f" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10" />

    <view.Color2Text
        android:id="@+id/tv_address"
        style="@style/TextSize13Color333"
        android:lineSpacingExtra="@dimen/size10"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10"
        android:text="收货人：张三(183****7257)\n"
        app:Color2Text_color="#666"
        app:Color2Text_content="地址：北京市朝阳区北辰东路8号M座1708"
        app:Color2Text_size="@dimen/sp13" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size5"
        android:paddingTop="@dimen/size10">

        <view.Color2Text
            style="@style/TextSize13Color333"
            android:lineSpacingExtra="@dimen/size8"
            android:text="需支付运费：\n"
            android:textColor="#f73f5f"
            app:Color2Text_color="#333"
            app:Color2Text_content="货品总价值：\n货品总重量："
            app:Color2Text_size="@dimen/sp13" />

        <view.Color2Text
            android:id="@+id/tv_price"
            style="@style/TextSize13Color333"
            android:layout_gravity="right"
            android:gravity="right"
            android:lineSpacingExtra="@dimen/size8"
            android:text="￥378.00\n"
            android:textColor="#f73f5f"
            app:Color2Text_color="#333"
            app:Color2Text_content="￥2879.00\n287g"
            app:Color2Text_size="@dimen/sp13" />
    </FrameLayout>
</LinearLayout>