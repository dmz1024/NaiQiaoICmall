<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize15Color333"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        android:gravity="center"
        android:padding="@dimen/size10"
        android:text="共计12个商品，需支付：￥123.00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        android:divider="@drawable/linear_f5f5f5_shpe"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:showDividers="middle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_he"
                style="@style/TextSize15Color333"
                android:layout_width="match_parent"
                android:drawableLeft="@mipmap/pay_he"
                android:drawablePadding="@dimen/size10"
                android:drawableRight="@mipmap/icon_pay_checked"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size10"
                android:paddingRight="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:text="和信通" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@mipmap/icon_pay_jian" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_zhi"
            style="@style/TextSize15Color333"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/pay_zhi"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/icon_pay_check"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="支付宝" />

        <TextView
            android:id="@+id/tv_wei"
            style="@style/TextSize15Color333"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/pay_wei"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/icon_pay_check"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="微信支付" />

        <TextView
            android:id="@+id/tv_yin"
            style="@style/TextSize15Color333"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/pay_yin"
            android:drawablePadding="@dimen/size10"
            android:drawableRight="@mipmap/icon_pay_check"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="银联支付" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size60"
        android:background="@drawable/shape_f73f5f_radius_3"
        android:text="去支付"
        android:textColor="#fff"
        android:textSize="@dimen/sp15" />
</LinearLayout>