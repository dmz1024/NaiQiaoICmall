<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        android:divider="@drawable/linear_f0f0f0_shpe"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size10"

        android:paddingRight="@dimen/size10"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_set"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="账号设置" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="收货地址" />

        <TextView
            android:id="@+id/tv_safe"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="安全中心" />

        <TextView
            android:id="@+id/tv_fankui"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="意见反馈" />

        <TextView
            android:id="@+id/tv_about"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="关于我们" />

        <TextView
            android:id="@+id/tv_cache"
            style="@style/TextSize13Color666"
            android:layout_width="match_parent"
            android:drawableRight="@mipmap/icon_go"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="清除缓存" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_exit"
        android:textSize="@dimen/sp15"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size39"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:background="@drawable/shape_f73f5f_radius_3"
        android:text="退出登录" />
</FrameLayout>