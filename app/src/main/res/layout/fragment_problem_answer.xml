<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size13"
        android:paddingRight="@dimen/size13"
        android:paddingTop="@dimen/size10">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize15Color999"
            android:text="积分如何使用"
            android:textColor="#f73f5f" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginTop="@dimen/size10"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/TextSize13Color333"
            android:layout_marginTop="@dimen/size10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips_more"
        style="@style/TextSize14Color999"
        android:layout_below="@id/ll_content"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/size13"
        android:paddingRight="@dimen/size13"
        android:paddingTop="@dimen/size10"
        android:text="您可能还想了解更多" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:paddingLeft="@dimen/size2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tips_more"
        android:background="#fff" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:background="#f73f5f"
        android:layout_marginBottom="@dimen/size10"
        android:text="未解决？在线咨询一下吧"
        android:textColor="#fff"
        android:textSize="15sp" />
</RelativeLayout>