<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size200"
        android:background="@mipmap/safety_bg">

        <FrameLayout
            android:layout_width="@dimen/size130"
            android:layout_height="@dimen/size130"
            android:layout_gravity="center"
            android:background="@drawable/shape_79000000_fff">

            <view.Color2Text
                style="@style/TextSize12Color999"
                android:layout_gravity="center"
                android:lineSpacingExtra="@dimen/size10"
                android:text="90分"
                android:textColor="#f73f5f"
                android:textSize="@dimen/sp30"
                app:Color2Text_color="#75f73f5f"
                app:Color2Text_content="\n安全等级"
                app:Color2Text_size="@dimen/sp15" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:divider="@drawable/linear_f5f5f5_shpe"
        android:showDividers="middle"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <view.Color2Text
            style="@style/TextSize14Color333"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:lineSpacingExtra="@dimen/size10"
            android:text="密码安全(安全等级：中)\n"
            android:drawableLeft="@mipmap/icon_safety_psd"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/size5"
            android:drawableRight="@mipmap/icon_go"
            app:Color2Text_color="#999"
            app:Color2Text_content="登录奈乔账户时需要输入密码"
            app:Color2Text_size="@dimen/sp12" />
        <view.Color2Text
            style="@style/TextSize14Color333"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:lineSpacingExtra="@dimen/size10"
            android:text="绑定手机号(已绑定：183****7257)\n"
            android:drawableLeft="@mipmap/icon_safety_tel"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_go"
            app:Color2Text_color="#999"
            app:Color2Text_content="将您的手机号与账户绑定，可用于登录和修改密码"
            app:Color2Text_size="@dimen/sp12" />
        <view.Color2Text
            style="@style/TextSize14Color333"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/size10"
            android:lineSpacingExtra="@dimen/size5"
            android:text="绑定邮箱(已绑定：123***@123.com)\n"
            android:drawableLeft="@mipmap/icon_safety_email"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_go"
            app:Color2Text_color="#999"
            app:Color2Text_content="将您的邮箱与账户绑定，可用于登录和修改密码"
            app:Color2Text_size="@dimen/sp12" />
        <view.Color2Text
            style="@style/TextSize14Color333"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/icon_safety_id"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/size10"
            android:lineSpacingExtra="@dimen/size5"
            android:text="身份认证(未认证)\n"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/icon_go"
            app:Color2Text_color="#999"
            app:Color2Text_content="将您的账户进行实名认证，提升账户安全性"
            app:Color2Text_size="@dimen/sp12" />
    </LinearLayout>
</LinearLayout>