<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:paddingBottom="@dimen/size4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/size10">

        <FrameLayout
            android:id="@+id/fg_img"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size90"
            android:background="@drawable/shape_fff_f5f5f5_ra"
            android:padding="1dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/size90"
                android:layout_height="@dimen/size90"
                android:scaleType="fitXY" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize13Color333"
            android:layout_marginLeft="@dimen/size4"
            android:layout_toRightOf="@id/fg_img"
            android:lineSpacingExtra="@dimen/size1"
            android:maxLines="2"
            android:text="肌肤之钥CPB淡斑精华光透白精华液肌肤之钥CPB淡斑精华光透白精华液" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextSize13Color666"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/size5"
            android:text="￥300"
            android:textColor="#f73f5f" />

        <TextView
            android:id="@+id/tv_old_price"
            style="@style/TextSize13Color666"
            android:layout_alignBottom="@id/tv_price"
            android:layout_marginLeft="@dimen/size20"
            android:layout_toRightOf="@id/tv_price"
            android:text="￥500"
            android:textColor="#999" />




        <TextView
            android:id="@+id/tv_count"
            style="@style/TextSize12Color333"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="@dimen/size5"
            android:layout_alignParentRight="true"
            android:text="已卖出2830件" />
        <TextView
            android:id="@+id/tv_guige"
            style="@style/TextSize12Color333"
            android:layout_toLeftOf="@id/tv_count"
            android:layout_marginRight="@dimen/size5"
            android:layout_alignBottom="@id/tv_count"
            android:layout_alignLeft="@id/tv_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="规格：30ml" />
    </RelativeLayout>
</FrameLayout>