<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <FrameLayout
        android:id="@+id/fg_img"
        android:layout_width="@dimen/size80"
        android:layout_height="@dimen/size80"
        android:background="@drawable/shape_fff_f5f5f5_ra"
        android:padding="1dp">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:scaleType="fitXY" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize14Color333"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size10"
        android:layout_toRightOf="@id/fg_img"
        android:maxLines="1"
        android:text="产品名称产产品名称产品名称品名称" />

    <com.naiqiao.mall.view.AddAndSubView
        android:id="@+id/view_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fg_img"
        android:layout_alignLeft="@id/tv_title"
        android:layout_marginBottom="@dimen/size5" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/TextSize13Color999"
        android:layout_alignBottom="@id/view_as"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginLeft="@dimen/size20"
        android:layout_toRightOf="@id/view_as"
        android:text="共12件" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/view_as"
        android:layout_marginTop="@dimen/size15"
        android:background="#e0e0e0" />
</RelativeLayout>