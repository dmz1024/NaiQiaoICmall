<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size105"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="@dimen/size5">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/size105"
            android:layout_height="@dimen/size95"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize12Color333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size1"
            android:maxLines="1"
            android:maxLength="8"
            android:text="有玻尿酸的洁面" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextSize12Color333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size1"
            android:text="￥278.00"
            android:textColor="#f73f5f" />
    </LinearLayout>

    <View
        android:background="#f5f5f5"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/size0.5"
        android:layout_height="@dimen/size120" />
</LinearLayout>