<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_marginTop="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size12"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size12"
        android:paddingTop="@dimen/size10">

        <TextView
            style="@style/TextSize15Color333"
            android:layout_gravity="center_vertical"
            android:text="账户" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size40"
            android:hint="手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:background="@null"
            android:maxLines="1"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_name"
        android:layout_marginTop="@dimen/size2"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size12"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10"
        android:paddingTop="@dimen/size12">

        <TextView
            style="@style/TextSize15Color333"
            android:layout_gravity="center_vertical"
            android:text="密码" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="@dimen/size40"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="16"
            android:digits="@string/password_digits"
            android:textColor="#999"
            android:textColorHint="#999"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_reg"
        style="@style/TextSize14Color999"
        android:layout_below="@id/ll_password"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size20"
        android:text="新用户注册"
        android:textColor="#f73f5f" />


    <TextView
        android:id="@+id/tv_forget"
        style="@style/TextSize14Color999"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_password"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size20"
        android:text="忘记密码"
        android:textColor="#f73f5f" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_below="@id/tv_forget"
        android:layout_marginLeft="@dimen/size10"
        android:enabled="false"
        android:alpha="0.5"
        android:layout_marginRight="@dimen/size10"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/size50"
        android:background="#f73f5f"
        android:text="立即登录"
        android:textSize="@dimen/sp18" />
</RelativeLayout>