<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size150"
            android:background="@mipmap/icon_help_bg"
            android:gravity="center_vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_qq"
                style="@style/TextSize15Colorfff"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:drawableTop="@mipmap/help_qq"
                android:gravity="center_horizontal"
                android:text="在线咨询" />

            <TextView
                android:id="@+id/tv_tel"
                style="@style/TextSize15Colorfff"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:drawableTop="@mipmap/help_tel"
                android:gravity="center_horizontal"
                android:text="电话咨询" />

            <TextView
                android:id="@+id/tv_online"
                style="@style/TextSize15Colorfff"
                android:layout_weight="1"
                android:drawablePadding="@dimen/size10"
                android:drawableTop="@mipmap/help_wei"
                android:gravity="center_horizontal"
                android:text="在线留言" />
        </LinearLayout>

        <TextView
            style="@style/TextSize13Color333"
            android:layout_width="match_parent"
            android:background="#fff"
            android:drawableLeft="@mipmap/icon_left_line"
            android:drawableRight="@mipmap/icon_right_line"
            android:gravity="center"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="常用自助服务" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />

        <TextView
            style="@style/TextSize13Color333"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:background="#fff"
            android:drawableLeft="@mipmap/icon_left_line"
            android:drawableRight="@mipmap/icon_right_line"
            android:gravity="center"
            android:paddingBottom="@dimen/size10"
            android:paddingTop="@dimen/size10"
            android:text="热点问题" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginBottom="@dimen/size50"
            android:background="#80ffffff">

            <TextView
                android:id="@+id/tv_more"
                style="@style/TextSize13Color333"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="@dimen/size10"
                android:paddingTop="@dimen/size10"
                android:text="更多问题" />

            <ImageView
                android:id="@+id/iv_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size5"
                android:layout_toRightOf="@id/tv_more"
                android:src="@mipmap/icon_go_down" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>