<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:paddingBottom="@dimen/size10">

    <RelativeLayout
        android:padding="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_name"
            android:text="邓如果"
            style="@style/TextSize15Color333" />
        <TextView
            android:id="@+id/tv_tel"
            android:text="18326167257"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="@dimen/size50"
            style="@style/TextSize15Color333" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/size12"
            android:maxLines="2"
            android:text="北京市朝阳区北辰东路8号M座1708北京市朝阳区北辰东路8号M座1708(100000)"
            style="@style/TextSize13Color999" />
        <View
            android:id="@+id/view"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="@dimen/size15"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="0.5px"/>
        <TextView
            android:id="@+id/tv_default"
            android:layout_below="@id/view"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/size5"
            android:layout_marginTop="@dimen/size15"
            android:layout_marginBottom="@dimen/size5"
            android:drawableLeft="@mipmap/icon_check"
            android:text="设为默认"
            style="@style/TextSize13Color666" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_below="@id/view"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/size5"
            android:layout_marginTop="@dimen/size15"
            android:layout_marginBottom="@dimen/size5"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/icon_oper_del"
            android:text="删除"
            style="@style/TextSize13Color666" />
        <TextView
            android:id="@+id/tv_edit"
            android:layout_below="@id/view"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/size5"
            android:layout_marginTop="@dimen/size15"
            android:layout_marginBottom="@dimen/size5"
            android:drawableLeft="@mipmap/icon_oper_edit"
            android:layout_toLeftOf="@id/tv_delete"
            android:layout_marginRight="@dimen/size30"
            android:text="编辑"
            style="@style/TextSize13Color666" />
    </RelativeLayout>
</FrameLayout>