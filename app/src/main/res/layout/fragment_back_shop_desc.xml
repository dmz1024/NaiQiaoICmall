<?xml version="1.0" encoding="utf-8"?>
<view.ScrollChangeScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextSize15Color333"
            android:layout_width="match_parent"
            android:background="#fff"
            android:padding="@dimen/size10"
            android:text="订单信息" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:background="#f5f5f5" />

        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="@dimen/size10"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:background="#f5f5f5" />

        <TextView
            style="@style/TextSize13Color333"
            android:layout_width="match_parent"
            android:background="#fff"
            android:gravity="right"
            android:padding="@dimen/size10"
            android:text="合计金额：8756.00元"
            android:textColor="#f73f5f" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:background="#fff"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10"
            android:paddingTop="@dimen/size10">

            <TextView
                android:id="@+id/tv_1"
                style="@style/TextSize13Color333"
                android:drawablePadding="@dimen/size3"
                android:drawableRight="@mipmap/icon_checked"
                android:gravity="center_vertical"
                android:text="提交申请"
                android:textColor="#f73f5f" />

            <LinearLayout
                android:id="@+id/ll_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:layout_toRightOf="@id/tv_1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size30">

                <TextView
                    android:id="@+id/tv_submit_info"
                    style="@style/TextSize13Color666"
                    android:lineSpacingExtra="@dimen/size10"
                    android:text="售后类型：退货退款\n退款原因：货品质量问题\n退款金额：938元\n收款金额：支付宝  894350911@qq.com" />

                <TextView
                    android:id="@+id/tv_submit_desc"
                    style="@style/TextSize13Color666"
                    android:layout_marginTop="@dimen/size10"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/size10"
                    android:maxLines="1"
                    android:text="售后类型：商品损坏" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size14">

                    <TextView
                        style="@style/TextSize13Color666"
                        android:layout_marginTop="@dimen/size10"
                        android:text="售后凭证：" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/size0.5"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_submit"
                android:layout_alignRight="@id/tv_1"
                android:layout_below="@id/tv_1"
                android:layout_marginRight="@dimen/size9"
                android:background="#f73f5f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10">

            <TextView
                android:id="@+id/tv_2"
                style="@style/TextSize13Color333"
                android:drawablePadding="@dimen/size3"
                android:drawableRight="@mipmap/icon_checked"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/size2"
                android:text="审核通过\n待退货"
                android:textColor="#f73f5f" />

            <LinearLayout
                android:id="@+id/ll_write_wuliu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:layout_toRightOf="@id/tv_2"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size20"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextSize13Color666"
                        android:layout_gravity="center_vertical"
                        android:text="物流公司：" />

                    <EditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="@dimen/size30"
                        android:background="@drawable/rectangle_00000000_a2a2a2"
                        android:drawableRight="@mipmap/icon_desc"
                        android:paddingRight="@dimen/size5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size3"
                        android:src="@mipmap/icon_wen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10">

                    <TextView
                        style="@style/TextSize13Color666"
                        android:layout_gravity="center_vertical"
                        android:text="物流单号：" />

                    <EditText
                        android:layout_width="@dimen/size150"
                        android:layout_height="@dimen/size30"
                        android:background="@drawable/rectangle_00000000_a2a2a2"
                        android:paddingRight="@dimen/size5" />
                </LinearLayout>

                <Button
                    android:layout_width="@dimen/size80"
                    android:layout_height="@dimen/size28"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size15"
                    android:background="#f73f5f"
                    android:text="确定"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_wuliu"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size20"
                android:layout_marginTop="@dimen/size5"
                android:layout_toRightOf="@id/tv_2"
                android:paddingBottom="@dimen/size20">

                <TextView
                    android:id="@+id/tv_wuliu_gs"
                    style="@style/TextSize13Color666"
                    android:drawablePadding="@dimen/size10"
                    android:drawableRight="@mipmap/icon_wen"
                    android:gravity="center_vertical"
                    android:text="物流公司：德邦物流" />

                <TextView
                    android:id="@+id/tv_wuliu_sn"
                    style="@style/TextSize13Color666"
                    android:layout_below="@id/tv_wuliu_gs"
                    android:layout_marginTop="@dimen/size20"
                    android:gravity="center_vertical"
                    android:text="物流单号：1234567894532" />

                <Button
                    android:id="@+id/bt_show_wuliu"
                    android:layout_width="@dimen/size80"
                    android:layout_height="@dimen/size28"
                    android:layout_below="@id/tv_wuliu_gs"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginTop="@dimen/size13"
                    android:layout_toRightOf="@id/tv_wuliu_sn"
                    android:background="#f73f5f"
                    android:text="查看物流"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp15" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/size0.5"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_wuliu"
                android:layout_alignRight="@id/tv_2"
                android:layout_below="@id/tv_2"
                android:layout_marginRight="@dimen/size9"
                android:layout_marginTop="-10dp"
                android:background="#e4e4e4" />


        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="@dimen/size20"
            android:paddingLeft="@dimen/size10"
            android:paddingRight="@dimen/size10">

            <TextView
                android:id="@+id/tv_3"
                style="@style/TextSize13Color666"
                android:drawablePadding="@dimen/size15"
                android:drawableRight="@mipmap/icon_path_no"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/size2"
                android:text="待退款" />
            <view.Color2Text
                android:layout_marginTop="@dimen/size5"
                android:text="财务正在审核\n"
                app:Color2Text_size="@dimen/sp12"
                app:Color2Text_color="#999"
                android:lineSpacingExtra="@dimen/size9"
                app:Color2Text_content="您的退款我们将会在3-5个工作日打入您的账户，请注意查收！详情咨询：010-32876352"
                android:layout_toRightOf="@id/tv_3"
                android:layout_marginLeft="@dimen/size20"
                style="@style/TextSize13Color333" />
        </RelativeLayout>
    </LinearLayout>
</view.ScrollChangeScrollView>