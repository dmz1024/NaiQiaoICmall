<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_huan"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size30"
        android:background="@drawable/rectangle_f6415f">

        <ImageView
            android:id="@+id/iv_huan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size15"
            android:src="@mipmap/icon_sh_huan" />

        <TextView
            style="@style/TextSize14Colorfff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size15"
            android:text="我要换货" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tui"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size100"
        android:layout_below="@id/rl_huan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size15"
        android:background="@drawable/rectangle_f6415f">

        <ImageView
            android:id="@+id/iv_tui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size15"
            android:src="@mipmap/icon_sh_tui" />

        <TextView
            style="@style/TextSize14Colorfff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size15"
            android:text="退货/退款" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_qq"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size100"
        android:layout_below="@id/rl_tui"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size15"
        android:background="@drawable/rectangle_f6415f">

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size15"
            android:src="@mipmap/icon_sh_qq" />

        <TextView
            style="@style/TextSize14Colorfff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size15"
            android:text="在线客服" />
    </RelativeLayout>
</RelativeLayout>