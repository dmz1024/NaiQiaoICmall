<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:divider="@drawable/linear_f5f5f5_shpe"
    android:showDividers="middle"
    android:paddingBottom="@dimen/size10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <view.Color2Text
        android:padding="@dimen/size10"
        android:id="@+id/tv_address"
        android:text="石头        183****7257\n"
        android:lineSpacingExtra="@dimen/size5"
        app:Color2Text_content="北京市朝阳区北辰东路北辰公寓M座1708（100000）"
        app:Color2Text_size="@dimen/sp12"
        style="@style/TextSize13Color333" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_shop"
        android:layout_marginTop="@dimen/size10"
        android:paddingLeft="@dimen/size20"
        android:paddingRight="@dimen/size20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_price_info"
        android:text="商品总重量：123g\n需支付运费：￥123.00"
        android:lineSpacingExtra="@dimen/size10"
        android:padding="@dimen/size10"
        style="@style/TextSize12Color333" />
    <com.naiqiao.mall.view.ViewSendCode
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_pay"
        android:text="去支付"
        android:textSize="@dimen/sp13"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/size20"
        android:layout_gravity="center_horizontal"
        android:background="#f73f5f"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size28" />
</LinearLayout>