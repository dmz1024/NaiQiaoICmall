<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:paddingTop="@dimen/size4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="@dimen/size10">

        <FrameLayout
            android:id="@+id/fg_img"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size90"
            android:background="@drawable/shape_fff_f5f5f5_ra"
            android:padding="1dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/size90"
                android:layout_height="@dimen/size90"
                android:scaleType="fitXY" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize13Color333"
            android:layout_marginLeft="@dimen/size4"
            android:layout_toRightOf="@id/fg_img"
            android:lineSpacingExtra="@dimen/size1"
            android:maxLines="2"
            android:text="肌肤之钥CPB淡斑精华光透白精华液肌肤之钥CPB淡斑精华光透白精华液" />

        <TextView
            android:id="@+id/tv_sn"
            style="@style/TextSize12Color666"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="@dimen/size8"
            android:text="产品条形码：123456789" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_sn"
            android:layout_marginTop="@dimen/size10">

            <com.naiqiao.mall.view.AddAndSubView
                android:id="@+id/view_aas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_guige"
                style="@style/TextSize11Color666"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size5"
                android:layout_toLeftOf="@id/view_aas"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="规格：30ml" />

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>