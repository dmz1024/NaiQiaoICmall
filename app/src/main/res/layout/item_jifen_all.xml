<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:padding="@dimen/size5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="@dimen/size10">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size170"
            android:scaleType="fitXY"
             />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize13Colorfff"
            android:layout_alignBottom="@id/iv_img"
            android:background="#40000000"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/size4"
            android:maxLines="2"
            android:padding="@dimen/size5"
            android:text="肌肤之钥CPB淡斑精华光透白精华液肌肤之钥CPB淡斑精华光透白精华液" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextSize14Color666"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/size5"
            android:layout_marginTop="@dimen/size5"
            android:text="12345积分" />

        <TextView
            android:id="@+id/tv_shi"
            style="@style/TextSize12Color666"
            android:layout_below="@id/tv_price"
            android:layout_alignLeft="@id/tv_price"
            android:layout_marginTop="@dimen/size5"
            android:text="市场价：￥1234.00" />

        <Button
            android:id="@+id/bt_dui"
            android:layout_width="@dimen/size70"
            android:layout_height="@dimen/size25"
            android:layout_below="@id/tv_shi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size5"
            android:background="@drawable/shape_f73f5f_radius_3"
            android:text="立即兑换"
            android:textColor="#fff"
            android:textSize="@dimen/sp11" />
    </RelativeLayout>
</FrameLayout>