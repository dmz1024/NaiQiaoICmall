<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_title_1"
            style="@style/TextSize12Color333"
            android:layout_weight="1"
            android:width="0dp"
            android:drawableBottom="@mipmap/icon_checked"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_horizontal"
            android:text="选择换货商品"
            android:textColor="#f73f5f" />

        <TextView
            android:id="@+id/tv_title_2"
            style="@style/TextSize12Color333"
            android:layout_weight="1"
            android:width="0dp"
            android:drawableBottom="@mipmap/icon_path_no"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_horizontal"
            android:text="选择进货商品" />

        <TextView
            android:id="@+id/tv_title_3"
            style="@style/TextSize12Color333"
            android:layout_weight="1"
            android:width="0dp"
            android:drawableBottom="@mipmap/icon_path_no"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_horizontal"
            android:text="确认换货单" />

        <TextView
            android:id="@+id/tv_title_4"
            style="@style/TextSize12Color333"
            android:layout_weight="1"
            android:width="0dp"
            android:drawableBottom="@mipmap/icon_path_no"
            android:drawablePadding="@dimen/size5"
            android:gravity="center_horizontal"
            android:text="提交审核" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"
        android:layout_marginLeft="@dimen/size50"
        android:layout_marginRight="@dimen/size57"
        android:layout_marginTop="@dimen/size40"
        android:background="#f73f5f" />

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:background="#f73f5f"
        android:text="去选择换入商品"
        android:textColor="#fff"
        android:textSize="@dimen/sp15" />

    <view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_next"
        android:layout_below="@id/ll_title" />

</RelativeLayout>