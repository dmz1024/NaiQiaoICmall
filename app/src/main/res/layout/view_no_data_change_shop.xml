<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingTop="@dimen/size10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_data"
            style="@style/TextSize15Color333"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size70"
            android:drawablePadding="@dimen/size10"
            android:drawableTop="@mipmap/icon_cart"
            android:text="进货车没有商品" />

        <TextView
            style="@style/TextSize13Color666"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size10"
            android:text="将商品加入进货车，加入后下拉刷新该界面" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size27"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size45"
            android:background="#f73f5f"
            android:text="去挑货"
            android:textColor="#fff"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</FrameLayout>